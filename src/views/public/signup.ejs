<!doctype html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    
    <title>twofac - signup</title>

    <style>
      html, body { height: 100%; }
    </style>
  </head>

  <body>
    <div class="container vertical-parent">
      <div class="row">
        <form action="<%= base %>/signup" method="post">
          <% if (locals.message && message.length) { %>
            <label class="alert">
              <%= message %>
            </label>
          <% } %>

          <label for="userInput">Username</label>
          <input class="u-full-width" type="text" id="userInput" name="username">
          <label for="passInput">Password</label>
          <input class="u-full-width" type="password" id="passInput" name="password">
          <label for="passInput">Repeat Password</label>
          <input class="u-full-width" type="password" id="passInput" name="second">
    
          <input class="button-primary" type="submit" value="Signup">
          <p>Already have an account? <a href="<%= base %>/login"> Log in.</a>.</p>
        </form>        
      </div>
    </div>
  </body>
</html>
