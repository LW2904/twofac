<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
    
    <title>twofac - <%= locals.status || 'error' %></title>

    <style>
      html, body { height: 100%; }
    </style>
  </head>

  <body>
    <%
      if (locals.err) { // Error object.
        locals.message = err.message;
      }

      if (!locals.message) {
        locals.message = 'Something exploded.';
      }

      if (!locals.data) {
        locals.data = {};
      }
    %>

    <div class="container vertical-parent">
      <div class="row">
        <p class="<%= message.length <= 50 ? 'bold' : '' %>">
          <%= message %>

          <% if (locals.details) { %>
            <br><span class="muted"><%= details %></span>
          <% } %>
        </p>

        <p>
          <% for (const name in data) { %>
            <%= name %>: <%= data[name] %></br>
          <% } %>
        </p>

        <p>
          <a href="<%= back %>">Back.</a>
        </p>
      </div>
    </div>
  </body>
</html>
